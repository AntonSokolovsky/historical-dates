{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist", "webpack.config.mjs"]
}
